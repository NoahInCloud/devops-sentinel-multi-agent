# Azure Configuration
AZURE_SUBSCRIPTION_ID=your_azure_subscription_id
AZURE_CLIENT_ID=your_azure_client_id
AZURE_CLIENT_SECRET=your_azure_client_secret
AZURE_TENANT_ID=your_azure_tenant_id
AZURE_RESOURCE_GROUP=your_resource_group

# Azure OpenAI Configuration
AZURE_OPENAI_ENDPOINT=https://your-openai-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your_openai_api_key
AZURE_OPENAI_DEPLOYMENT_NAME=your_deployment_name
AZURE_OPENAI_API_VERSION=2024-02-01

# Azure Communication Services
ACS_CONNECTION_STRING=your_azure_communication_service_connection_string

# Kubernetes Configuration
KUBECONFIG=path_to_your_kubeconfig_file
KUBERNETES_API_URL=your_kubernetes_api_url
KUBERNETES_TOKEN=your_kubernetes_token
KUBERNETES_NAMESPACE=devops-sentinel

# kagent Integration
KAGENT_REPO_URL=https://github.com/NoahInCloud/kagent
KAGENT_BRANCH=main
KAGENT_API_ENDPOINT=http://localhost:8080

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/devops_sentinel
REDIS_URL=redis://localhost:6379

# Application Configuration
LOG_LEVEL=INFO
DEBUG=false
HOST=localhost
PORT=8000
WEBSOCKET_PORT=8765

# WebSocket Configuration
WEBSOCKET_URL=ws://localhost:8765
CALLBACK_URI_HOST=localhost:8000

# Security
SECRET_KEY=your_secret_key_here
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# Monitoring and Observability
PROMETHEUS_ENDPOINT=http://localhost:9090
GRAFANA_ENDPOINT=http://localhost:3000
JAEGER_ENDPOINT=http://localhost:14268

# Email Notifications (optional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_email_password

# Slack Notifications (optional)
SLACK_WEBHOOK_URL=your_slack_webhook_url
SLACK_CHANNEL=#devops-alerts

# Environment
ENVIRONMENT=development